{
  "name": "@rcrsr/rill",
  "version": "0.4.2",
  "description": "Rill - An embeddable scripting language for orchestrating LLM workflows",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "rill-exec": "./dist/cli-exec.js",
    "rill-eval": "./dist/cli-eval.js",
    "rill-check": "./dist/cli-check.js"
  },
  "files": [
    "dist",
    "docs"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rcrsr/rill.git"
  },
  "bugs": {
    "url": "https://github.com/rcrsr/rill/issues"
  },
  "homepage": "https://github.com/rcrsr/rill#readme",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "rm -f tsconfig.tsbuildinfo",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "rill": "npx tsx src/cli-exec.ts",
    "test:examples": "npx tsx scripts/test-examples.ts docs/",
    "check": "npm run test:examples && npm run format:check && npm run lint && npm run typecheck && npm run build && npm run test"
  },
  "keywords": [
    "rill",
    "scripting",
    "dsl",
    "pipe",
    "workflow",
    "parser",
    "interpreter"
  ],
  "author": "Andre Bremer",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "yaml": "^2.8.2"
  }
}
