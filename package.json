{
  "name": "rill-lang",
  "version": "1.0.0",
  "description": "Embeddable, sandboxed scripting to power AI agents",
  "private": true,
  "packageManager": "pnpm@10.10.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rcrsr/rill.git"
  },
  "bugs": {
    "url": "https://github.com/rcrsr/rill/issues"
  },
  "homepage": "https://github.com/rcrsr/rill#readme",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "test:watch": "vitest",
    "typecheck": "pnpm -r run typecheck",
    "lint": "pnpm -r run lint",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "check": "pnpm -r run check",
    "test:examples": "pnpm --filter @rcrsr/rill run test:examples"
  },
  "keywords": [
    "rill",
    "scripting",
    "dsl",
    "pipe",
    "workflow",
    "parser",
    "interpreter"
  ],
  "author": "Andre Bremer",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "prettier": "^3.8.1",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
