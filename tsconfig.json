{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // Package-specific output paths
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": ["src/**/*", "packages/**/src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/node_modules",
    "**/dist",
    "tests/**/*",
    "**/tests/**/*"
  ]
}
